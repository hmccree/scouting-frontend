.list
  padding: 0
  list-style-type: none
  overflow-y: auto
  margin: 0 auto
  width: 100%

  & li
    max-width: 500px
    margin: 0 auto

  & a
    padding: 15px
    display: block
    color: inherit
    text-decoration: none
    border-radius: 3px
    outline: none

  & a[href]
    transition: background 0.2s ease
    
    &:hover, &:focus
      background: gray(0, 05%)