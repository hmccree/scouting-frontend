html,
body
  height: 100%
  width: 100%
  padding: 0
  margin: 0
  font-family: roboto, 'Helvetica Neue', arial, sans-serif
  font-weight: 400
  color: #222
  background: gray(90%)
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  overflow: hidden

*, *::before, *::after
  box-sizing: border-box

#app
  height: 100%
  display: flex
  flex-direction: column
  margin: 0 auto
